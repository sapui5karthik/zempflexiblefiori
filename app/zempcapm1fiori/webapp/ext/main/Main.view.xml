<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="zempcapm1fiori.ext.main.Main">
   	<f:DynamicPage id="FilterBarDefault" class="sapUiResponsiveContentPadding">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle1" text="Filter Bar" level="H2" />
				</f:heading>
				<f:snappedContent>
					<Text text="{fbConditions>/filtersTextInfo}" />
					
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<VBox id="_IDGenVBox1">
				 <macros:FilterBar id="FilterBar" metaPath="@com.sap.vocabularies.UI.v1.SelectionFields" filterChanged=".handlers.onFiltersChanged"/>
				
				</VBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
		<VBox>
		<Panel headerText="Create Record">
		  <VBox class="sapUiSmallMargin">
        <Label text="Employee ID" />
        <Input id="idEmpid" width="200px" />

        <Label text="Employee Name" />
        <Input id="idEmpname" width="200px" />

        <Button text="Create Employee" press="onCreate" type="Emphasized" class="sapUiSmallMarginTop" />
    </VBox>
		</Panel>
			<Panel expanded="true" height="100%" headerText="Conditions from Filter Bar" expandable="true">
				<FlexBox direction="Column" fitContainer="true" justifyContent="Start">
					 <macros:Table id="LineItemTable" metaPath="@com.sap.vocabularies.UI.v1.LineItem" filterBar="FilterBar" readOnly="true"
					enableSelectAll="true"
					header="EMPLOYEE DATA"
					 />
				</FlexBox>
				<layoutData>
					<FlexItemData growFactor="1" shrinkFactor="1" />
				</layoutData>
			</Panel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>
